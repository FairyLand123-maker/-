/* page/component/information/information.wxss */
@import '../../common/common.wxss';


.main .header {
    position: relative; 
    height: 592rpx;
}
.header .thumb{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    transform: translate(-50%,-50%);
    width: 154px;
    height: 177px;
}
.header .thumb image{
    width: 100%;
    height: 80%;
}
.form-box{
    padding-left: 30rpx;
}
.form-box input,.form-box .student{
    height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    color: black;
    width: 90%;
    margin: auto;
    margin-bottom: 6px;
}
.form-box .input-placeholder{
    color: black;
}
.form-box button{
    margin:30rpx 30rpx 0 0;
}
.form-box .student{
    position: relative;
    line-height: 90rpx;
    margin-bottom: 36px;
}
.form-box .student-check::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.footer{
    width: 165px;
    height: 34px;
    background: #ed7c2d;
    margin: auto;
    border-radius: 15rpx;
    color: white;
    font-size: 18px;
    line-height: 34px;
    text-align: center;
}