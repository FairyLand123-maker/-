/* page/component/information/information.wxss */
@import '../../common/common.wxss';


.main .header {
    position: relative; 
    height: 400rpx;
}
.header .thumb{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    transform: translate(-50%,-50%);
}
.form-box{
    padding-left: 30rpx;
}
.form-box input,.form-box .student{
    height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    color: black;
}
.form-box .input-placeholder{
    color: black;
}
.form-box button{
    margin:30rpx 30rpx 0 0;
}
.form-box .student{
    position: relative;
    line-height: 90rpx;
}
.form-box .student-check::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}